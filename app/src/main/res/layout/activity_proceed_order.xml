<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    tools:context="com.example.android.privatesun1.ProceedOrder"
    >

    <!--****ORDER TEXT****-->

    <FrameLayout
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:background="#fff">

        <TextView
            android:id="@+id/order1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textSize="22dp"
            android:textColor="#333333"
            android:gravity="center"
            android:padding="16dp"
            android:background="#fff"
            />

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="58dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               />/ android:src="@drawable/arrow"
                android:paddingLeft="16dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            >

            <TextView
                android:id="@+id/payTotal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/rect"
                android:text="Pay $150"
                android:textSize="18dp"
                android:textColor="#fff"
                android:padding="8dp"
                />

        </LinearLayout>


    </FrameLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order"
        android:layout_marginBottom="52.5dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dad8d8"
                android:gravity="bottom"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingTop="12dp">


                <!--****NAME TEXT****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/name1"
                        android:layout_weight="2.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YOUR NAME"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your first and last name"
                        android:textColor="#c3c3c3" />
                </LinearLayout>


                <!--****Your name TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"
                        android:background="#fff">

                        <EditText
                            android:id="@+id/name3"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:textColorHint="#333333"
                            android:maxLines="1"
                            android:layout_height="33.5dp"
                            android:background="#00000000"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="#fff"
                        >

                        <EditText
                            android:id="@+id/name4"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS 1****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/addL1"
                            android:layout_weight="5.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS LINE 1"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS LINE 1 FIELD****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"

                        >

                        <EditText
                            android:id="@+id/addL2"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>
                </LinearLayout>



                <!--****ADDRESS 2****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <TextView
                            android:id="@+id/addL3"
                            android:layout_weight="5.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS LINE 2"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ADDRESS LINE 2 FIELD****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"

                        >

                        <EditText
                            android:id="@+id/addL4"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>
                </LinearLayout>


                <!--****CITY AND STATE****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/city1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CITY"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/state1"
                        android:layout_weight="1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STATE"
                        android:textColor="#333333" />
                </LinearLayout>


                <!--****CITY AND STATE   TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="16dp"
                        android:background="#fff"
                        >

                        <EditText
                            android:id="@+id/city2"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="#fff"
                        >

                        <EditText
                            android:id="@+id/state2"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>
                </LinearLayout>


                <!--****ZIPCODE AND COUNTRY****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <TextView
                        android:id="@+id/zip1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ZIP CODE"
                        android:inputType="number"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/cou1"
                        android:layout_weight="1.1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COUNTRY"
                        android:textColor="#333333" />
                </LinearLayout>


                <!--****ZIPCODE AND COUNTRY TEXT****-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:layout_marginRight="16dp">

                        <EditText
                            android:id="@+id/zip2"
                            android:layout_weight="1.1"
                            android:inputType="number"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="#fff"
                        >

                        <EditText
                            android:id="@+id/cou2"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="1" />


                    </LinearLayout>
                </LinearLayout>



                <!--****COMMENT****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        >

                        <TextView
                            android:id="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="COMMENT"
                            android:textColor="#333333" />


                    </LinearLayout>
                </LinearLayout>


                <!--****COMMENT FIELD****-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="26dp"
                        android:background="#fff"


                        >

                        <EditText
                            android:id="@+id/comment2"
                            android:padding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="33.5dp"
                            android:textColorHint="#333333"
                            android:background="#00000000"
                            android:maxLines="2" />


                    </LinearLayout>
                </LinearLayout>










            </LinearLayout>
        </LinearLayout>



    </ScrollView>





    <!--****PAY****-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1c57ff"
        android:text="Submit Order"
        android:textSize="20dp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>

