<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff">

    <customfonts.MyTextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24dip"
        android:layout_margin="5dip"
        android:layout_marginBottom="20dp"
        android:text="Shopping Cart"></customfonts.MyTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <customfonts.MyTextView
            android:layout_height="wrap_content"
            android:id="@+id/TextViewSubtotal"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:text="Subtotal:"
            android:textStyle="bold"></customfonts.MyTextView>

        <customfonts.MyTextView
            android:layout_height="wrap_content"
            android:id="@+id/FinalPrice"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:text="0"
            android:textStyle="bold"></customfonts.MyTextView>

    </LinearLayout>



    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/itemCatalog"
        android:background="#ffffff"
        android:cacheColorHint="#ffffff"
        android:clickable="true"
        android:choiceMode="multipleChoice">

    </ListView>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dip">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorButton"
            android:textColor="@color/white"
            android:id="@+id/ButtonRemoveFromCart"
            android:text="Remove from Cart"></android.support.v7.widget.AppCompatButton>

        <android.support.v7.widget.AppCompatButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorButton"
            android:id="@+id/ButtonProceed"
            android:textColor="@color/white"
            android:text="Proceed to Checkout"></android.support.v7.widget.AppCompatButton>
    </LinearLayout>


</LinearLayout>
